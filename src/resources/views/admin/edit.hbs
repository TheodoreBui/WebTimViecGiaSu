<div class="containe">
    <div class="content-wrapper">
        <div class="content">
            <div class="signup-wrapper shadow-box">
                <div class="company-details ">
                    <div class="shadow"></div>
                    <div class="wrapper-1">
                        <div class="logo">
                            <div class="icon-food">

                            </div>
                        </div>
                        <h1 class="title">cupcar co.</h1>
                        <div class="slogan">We deliver cupcar to you.</div>
                    </div>
                </div>


                <div class="signup-form ">
                    <div class="wrapper-2">
                        <div class="form-title">EDIT NOW</div>
                        <div class="form">
                            <form action="/car/edit/{{car._id}}?_method=PUT" method="POST">

                                <label>Tên xe
                                    <input type="text" placeholder="Ví dụ: Lx 570" name="tenxe" readonly
                                        value="{{car.tenxe}}">
                                </label>

                                <label>Sản xuất năm
                                    <input type="text" placeholder="Ví dụ: 2018" name="namsx" readonly
                                        value="{{car.namsx}}">
                                </label>

                                <label>Biển số
                                    <input type="text" placeholder="Ví dụ: 15A-12345" name="bienso" readonly
                                        value="{{car.bienso}}">
                                </label>

                                <label>Giá bán
                                    <input type="text" placeholder="{{car.giaban}} vnđ" name="giaban" required
                                        value="{{car.giaban}}">
                                </label>

                                <label>Lăn bánh
                                    <input type="text" placeholder="Vd: 42343 (km)" name="lanbanh" required
                                        value="{{car.lanbanh}}">
                                </label>

                                <label>VideoId
                                    <input type="text" placeholder="{{car.videoId}}" name="videoId" required
                                        value="{{car.videoId}}">
                                </label>

                                <select name="loaixe" class="select" 
                                    style="padding:15px 10px;margin-right: 14px;" value="{{car.loaixe}}">
                                    <option value="">Loại xe</option>
                                    <option value="sedan">Sedan</option>
                                    <option value="suv">SUV</option>
                                    <option value="pickup">Bán tải</option>
                                    <option value="crossover">Crossover</option>
                                    <option value="supercar">Siêu xe</option>
                                    <option value="electriccar">Xe điện</option>
                                </select>

                                <button type="submit" class="signup">Sửa</button>

                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">

    <style>
        .signup-wrapper .company-details {
            background: url(http://img.youtube.com/vi/{{car.videoId}}/maxresdefault.jpg);
            background-size: cover;
            position: relative;
        }
    </style>
</div>