<div class="content-wrapper">
    <div class="content">
        <div class="signup-wrapper shadow-box">
            <div class="company-details ">
                <div class="shadow"></div>
                <div class="wrapper-1">
                    <div class="logo">
                        <div class="icon-food">

                        </div>
                    </div>
                    <h1 class="title">cupcar co.</h1>
                    <div class="slogan">We deliver cupcar to you.</div>
                </div>
            </div>


            <div class="signup-form ">
                <div class="wrapper-2">
                    <div class="form-title">CREATE NOW</div>
                    <div class="form">
                        <form action="/car/create" method="POST">
                            <label>Tên xe
                                <input type="text" placeholder="Vd: Lx 570" name="ten" required value="{{ten}}">
                            </label>

                            <label>Sản xuất năm
                                <input type="text" placeholder="Vd: 2018" name="nam" required value="{{nam}}">
                            </label>
                            {{#if errorNam}}
                            <p>{{errorNam}}</p>
                            {{/if}}

                            <label>Biển số
                                <input type="text" placeholder="Vd: 15A-12345" name="bienso" required
                                    value="{{bienso}}">
                            </label>
                            {{#if errorBienSo}}
                            <p>{{errorBienSo}}</p>
                            {{/if}}

                            <label>Giá bán
                                <input type="text" placeholder="Vd: 456789 ($)" name="gia" required value="{{gia}}">
                            </label>
                            {{#if errorGia}}
                            <p>{{errorGia}}</p>
                            {{/if}}

                            <label>Lăn bánh
                                <input type="text" placeholder="Vd: 42343 (km)" name="lanbanh" required
                                    value="{{lanbanh}}">
                            </label>

                            <label>VideoId
                                <input type="text" placeholder="Ví dụ: n3_de9LeZ" name="videoId" required
                                    value="{{videoId}}">
                            </label>

                            <select name="loaixe" class="select" required style="padding:15px 10px;margin-right: 14px;">
                                <option value="">Loại xe</option>
                                <option value="sedan">Sedan</option>
                                <option value="suv">SUV</option>
                                <option value="pickup">Bán tải</option>
                                <option value="crossover">Crossover</option>
                                <option value="supercar">Siêu xe</option>
                                <option value="electriccar">Xe điện</option>
                            </select>


                            <button type="submit" class="signup">Đăng </button>

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>