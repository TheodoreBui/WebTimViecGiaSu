<div class="box-form">
    <div class="left">
        <div class="overlay">
            <h1>Thế giới xe</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Curabitur et est sed felis aliquet sollicitudin</p>
            <span>
                <p>login with social media</p>
                <a href="#">Login with Facebook</a>
                <a href="#">Login with Twitter</a>
            </span>
        </div>
    </div>


    <div class="right">
        <form action="/check" method="POST">
            <h5>Register</h5>
            <p>Do you have an account? <a href="/">Login your account</a> to enjoy this moment</p>
            {{#if error}}
                <div class="alert alert-secondary" role="alert">{{error}}</div>
            {{/if}}
            <div class="inputs">
                <input type="text" placeholder="Tài khoản(sđt)" name="sdt" value="{{values.sdt}}" required>
                
                <input type="password" placeholder="Mật khẩu" name="password" value="{{values.password}}" required>
                <input type="password" placeholder="Nhập lại mật khẩu" name="repassword" value="{{values.repassword}}" required>
            </div>

            <br><br>       

            <br>
            <button type="submit">Tiếp theo</button>
        </form>
    </div>

</div>